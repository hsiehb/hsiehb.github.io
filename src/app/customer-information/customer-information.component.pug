#sunset-video-container(align='center')
    section.overlay([@fadeInOutOverlay]="overlayState")
    video(width='100%', height='100%', autoplay, loop, (loadeddata)="onLoadedData()")
        source(src='https://www.dropbox.com/s/fb9slocsduf8npw/alaska1.mp4?dl=1', type='video/mp4')
    .custom-message([@fadeInOutTitle]="titleState",(click)='onClick()') {{ mainTitle.text | uppercase }}
    .about-title-container(*ngIf='displayAbout')
        p.about-title {{ aboutText.TITLE }}
    .about-container(*ngIf='displayAbout')
        p.about {{ aboutText.P1 }}
    .footer
        nav.nav(*ngIf='displayNav')
            a.nav-link.active.float-l([ngClass]="{ 'active': displayHome }", (click)='onHomeClick()') {{ currentSunset.name | uppercase }}
            a.nav-link.float-l([ngClass]="{ 'active': displayAbout }", (click)='onAboutClick()') ABOUT
            a.nav-link.time.float-r {{ currentSunset.time | uppercase }}
